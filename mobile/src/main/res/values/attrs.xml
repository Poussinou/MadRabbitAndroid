<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StatefulLayout">
        <attr name="state" format="enum">
            <enum name="content" value="0"/>
            <enum name="progress" value="1"/>
            <enum name="offline" value="2"/>
            <enum name="empty" value="3"/>
        </attr>
        <attr name="progressLayout" format="reference"/>
        <attr name="offlineLayout" format="reference"/>
        <attr name="emptyLayout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="Drawer">
        <attr name="drawerItemBackground" format="reference"/>
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference"/>
        <attr name="metaButtonBarButtonStyle" format="reference"/>
    </declare-styleable>
</resources>
